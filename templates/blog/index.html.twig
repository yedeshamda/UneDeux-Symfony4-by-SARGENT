{% extends 'layout/base.html.twig' %}
{% block body %}
    <h1>Liste des Blogs</h1>

    <table id="table_id" class="table table-striped">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Slug</th>
                <th>Image</th>
                <th>Datecreation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog in blogs %}
            <tr>
                <td>{{ blog.titre }}</td>
                <td>{{ blog.slug }}</td>
                <td>{{ blog.image }}</td>
                <td>{{ blog.datecreation ? blog.datecreation|date('Y-m-d') : '' }}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('admin_blog_show', {'id': blog.id}) }}">DÃ©tails</a>
                    <a class="btn btn-warning btn-sm" href="{{ path('admin_blog_edit', {'id': blog.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_blog_new') }}">Create new</a>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/datatables.min.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- DataTable-->
    <script src="{{ asset('assets/js/pdfmake.min.js') }}"></script>
    <script src="{{ asset('assets/js/vfs_fonts.js') }}"></script>
    <script src="{{ asset('assets/js/datatables.min.js') }}"></script>

    <script>
        $(document).ready(function () {
            $('#table_id').DataTable({
                language: {
                    url: 'http://cdn.datatables.net/plug-ins/1.10.24/i18n/French.json'
                },
            });
        });
    </script>
{% endblock %}
