{% extends 'layout/base.html.twig' %}
{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ blog.titre }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ blog.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ blog.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ blog.image }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{{ blog.datecreation ? blog.datecreation|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>
    {{ include('blog/_delete_form.html.twig') }}
    <br>
    <a href="{{ path('admin_blog_edit', {'id': blog.id}) }}">Modifer</a>
    <br>
    <a href="{{ path('admin_blog_index') }}">back to list</a>
    <br>
{% endblock %}
