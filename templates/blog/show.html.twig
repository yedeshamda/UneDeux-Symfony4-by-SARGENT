{% extends 'layout/base.html.twig' %}
{% block body %}
    <h1>Détails du Blog</h1>

    <table class="table">
        <tbody>
        <center>
            <img src="{{asset('images/blogs/'~blog.imageName)}}" height="160">
        </center>
        <br>
            <tr>
                <th>Titre</th>
                <td>{{ blog.titre }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ blog.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>
                    {% autoescape false %}
                    {{ blog.description|raw }}</td>
                {% endautoescape %}
            </tr>
            <tr>
                <th>Date Création</th>
                <td>{{ blog.datecreation ? blog.datecreation|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <center>
    {{ include('blog/_delete_form.html.twig') }}
    <br>
    <a class="btn btn-primary btn-sm" href="{{ path('admin_blog_edit', {'id': blog.id}) }}">Modifer</a>
    <br><br>
    </center>
    <a href="{{ path('admin_blog_index') }}">back to list</a>
    <br>
{% endblock %}
