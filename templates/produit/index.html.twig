{% extends 'layout/base.html.twig' %}
{% block body %}
    <h1>Liste des Produits</h1>

    <table id="table_id" class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Date Création</th>
                <th>Slug</th>
                <th>Image</th>
                <th>Marque</th>
                <th>Catégorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.datecreation ? produit.datecreation|date('Y-m-d') : '' }}</td>
                <td>{{ produit.slug }}</td>
                <td><img src="{{asset('images/produits/'~produit.imageName)}}" height="40"></td>
                <td>{{ produit.marque.nom }}</td>
                <td>{{ produit.categorie.nom }}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('admin_produit_show', {'id': produit.id}) }}">Détails</a>
                    <a class="btn btn-warning btn-sm" href="{{ path('admin_produit_edit', {'id': produit.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_produit_new') }}">Ajouter un Produit ?</a>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/datatables.min.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- DataTable-->
    <script src="{{ asset('assets/js/pdfmake.min.js') }}"></script>
    <script src="{{ asset('assets/js/vfs_fonts.js') }}"></script>
    <script src="{{ asset('assets/js/datatables.min.js') }}"></script>

    <script>
        $(document).ready(function () {
            $('#table_id').DataTable({
                language: {
                    url: 'http://cdn.datatables.net/plug-ins/1.10.24/i18n/French.json'
                },
            });
        });
    </script>
{% endblock %}
