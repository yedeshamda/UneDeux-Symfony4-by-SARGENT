{% extends 'layout/base.html.twig' %}
{% block body %}
    <h1>Votre Profil</h1>

    <table class="table">
        <tbody>
        <center>
        <img src="{{ asset('images/users/'~app.user.imageName) }}" height="160">
        </center>
        <br>
            <tr>
                <th>Email</th>
                <td>{{ app.user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                {% if app.user.roles[0]=="ROLE_ADMIN" %}
                    <td>ADMIN</td>
                {% else %}
                    <td>USER</td>
                {% endif %}
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ app.user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ app.user.prenom }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
