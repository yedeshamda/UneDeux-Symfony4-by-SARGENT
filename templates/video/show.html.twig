{% extends 'layout/base.html.twig' %}
{% block body %}
    <h1>Video</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ video.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ video.description|raw }}</td>
            </tr>
            <center>
            <video controls width="250">
                <source src="{{asset('videos/'~video.videoName)}}"
                        type="video/mp4">
                <source src="{{asset('videos/'~video.videoName)}}"
                        type="video/webm">


            </video>
            </center>
            <tr>
                <th>Datecreation</th>
                <td>{{ video.datecreation ? video.datecreation|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_video_index') }}">back to list</a>

    <a href="{{ path('admin_video_edit', {'id': video.id}) }}">edit</a>

    {{ include('video/_delete_form.html.twig') }}
{% endblock %}
