{% extends 'admin/layout/base.html.twig' %}

{% block body %}
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="row mb-3">
            <label>BIENVENUE à MATEB</label>
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">
                        en Français
                    </button>
                    <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">
                        en Anglais
                    </button>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show nav-desc active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                    <input type="text" class="form-control" value="{{ bienvenue|default('') }}" name="BIENVENUE">
                </div>
                <div class="tab-pane fade nav-fiche" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                    <input type="text" class="form-control" value="{{ welcome|default('') }}" name="WELCOME">
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <label>Les missions de MATEB</label>
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <button class="nav-link active" id="nav-home-tab2" data-bs-toggle="tab" data-bs-target="#nav-home2" type="button" role="tab" aria-controls="nav-home2" aria-selected="true">
                        en Français
                    </button>
                    <button class="nav-link" id="nav-profile-tab2" data-bs-toggle="tab" data-bs-target="#nav-profile2" type="button" role="tab" aria-controls="nav-profile2" aria-selected="false">
                        en Anglais
                    </button>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show nav-desc active" id="nav-home2" role="tabpanel" aria-labelledby="nav-home-tab2">
                    <input type="text" class="form-control" value="{{ mission|default('') }}" name="MISSION">
                </div>
                <div class="tab-pane fade nav-fiche" id="nav-profile2" role="tabpanel" aria-labelledby="nav-profile-tab2">
                    <input type="text" class="form-control" value="{{ missionen|default('') }}" name="MISSIONEN">
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <label>image 1</label>
            <input type="file" class="form-control" name="image1">
        </div>
        <div class="row mb-3">
            <label>image 2</label>
            <input type="file" class="form-control" name="image2">
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Valider</button>
        </div>
    </form>
</div>
{% endblock %}

