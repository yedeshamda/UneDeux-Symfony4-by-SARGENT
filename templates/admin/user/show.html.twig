{% extends 'admin/layout/base.html.twig' %}
{% block body %}
    <h1>Détails du l'Utilisateur</h1>

    <table class="table">
        <tbody>
        <center>
        <img src="{{ asset('images/users/'~user.photo.photoName|default('')) }}" height="160">
        </center>
        <br>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                {% if user.roles[0]=="ROLE_ADMIN" %}
                    <td>ADMIN</td>
                {% else %}
                    <td>Utilisateur</td>
                {% endif %}
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
        </tbody>
    </table>

    <center>
    {{ include('admin/user/_delete_form.html.twig') }}
    <br>
    <a class="btn btn-primary btn-sm" href="{{ path('admin_user_edit', {'id': user.id}) }}">Modifer</a>
    <br><br>
    </center>
    <a href="{{ path('admin_user_index') }}">Précédent</a>
    <br>

{% endblock %}
