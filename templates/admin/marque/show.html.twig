{% extends 'admin/layout/base.html.twig' %}
{% block body %}
    <h1>Détails du Marque</h1>

    <table class="table">
        <tbody>
        <center><img src="{{asset('images/marques/'~marque.imageName)}}" height="160"></center>
        <br>
            <tr>
                <th>Nom</th>
                <td>{{ marque.nom }}</td>
            </tr>
            <tr>
