{% extends 'admin/layout/base.html.twig' %}
{% block body %}
    <h1>Liste des Categories</h1>

    <table id="table_id" class="table table-striped">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Slug</th>
            <th>Baniere</th>
            <th>Titre</th>
            <th>Description</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.nom }}</td>
                <td>{{ categorie.slug }}</td>
                <td><img src="{{asset('images/categories/'~categorie.baniereImageName)}}" height="40"></td>
                <td>{{ categorie.titre }}</td>
                <td>{{ categorie.description }}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('admin_categorie_show', {'id': categorie.id}) }}">Détails</a>
                    <a class="btn btn-warning btn-sm" href="{{ path('admin_categorie_edit', {'id': categorie.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_categorie_new') }}">Ajouter une Catégorie ?</a>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/datatables.min.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- DataTable-->
    <script src="{{ asset('assets/js/pdfmake.min.js') }}"></script>
    <script src="{{ asset('assets/js/vfs_fonts.js') }}"></script>
    <script src="{{ asset('assets/js/datatables.min.js') }}"></script>

    <script>
        $(document).ready(function () {
            $('#table_id').DataTable({
                language: {
                    url: 'http://cdn.datatables.net/plug-ins/1.10.24/i18n/French.json'
                },
            });
        });
    </script>
{% endblock %}
