{% extends 'admin/layout/base.html.twig' %}

{% block body %}
	<!-- Content Wrapper. Contains page content -->
	<div
		class="container">
		<!-- Content Header (Page header) -->
		<section class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1>Consulter Livraison</h1>
					</div>
					<div class="col-sm-6">
						<a class="btn btn-primary" href="{{ path('app_livraison_new') }}">Nouvelle livraison</a>
					</div>
				</div>
			</div>
			<!-- /.container-fluid -->
		</section>

		<!-- Main content -->
		<section class="content">
			<div class="row">
				<div class="col-12">
					<div class="card">
						<div class="card-body">
							<table class="table">
								<tbody>
									<tr>
										<th>Id</th>
										<td>{{ livraison.id }}</td>
									</tr>
									<tr>
										<th>Adresse</th>
										<td>{{ livraison.adresse }}</td>
									</tr>
									<tr>
										<th>Etat</th>
										<td>{{ livraison.etat }}</td>
									</tr>
									<tr>
										<th>Livreur</th>
										<td>{{ livraison.livreur }}</td>
									</tr>
								</tbody>
							</table>

							<a class="btn btn-primary" href="{{ path('app_livraison_index') }}">back to list</a>

							<a class="btn btn-success" href="{{ path('app_livraison_edit', {'id': livraison.id}) }}">edit</a>

							<form method="post" action="{{ path('app_livraison_delete', {'id': livraison.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
								<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livraison.id) }}">
								<button class="btn btn-danger mt-2">Delete</button>
							</form>


						</div>
						<!-- /.card-body -->
					</div>
					<!-- /.card -->
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</section>
		<!-- /.content -->
	</div>
{% endblock %}
