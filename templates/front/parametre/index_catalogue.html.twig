{% extends 'front/layout/base.html.twig' %}

{% block body %}
    <div class="container">

        <div class="row">
            <!--Normal FLipbook-->
            <div class="_df_book" height="500" webgl="true"
                 source="{{ asset('images/parametres/'~parametre.catalogue) }}"
                 id="df_manual_book">
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Flipbook StyleSheet -->
    <link href="{{ asset('assets/css/dflip.min.css') }}" rel="stylesheet" type="text/css">

    <!-- Icons Stylesheet -->
    <link href="{{ asset('assets/css/themify-icons.min.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Flipbook main Js file -->
    <script src="{{ asset('assets/js/dflip.min.js') }}" type="text/javascript"></script>
{% endblock %}
