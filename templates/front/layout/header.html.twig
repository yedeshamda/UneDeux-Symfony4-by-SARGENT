<header class="baniere-form position-relative">
    <img src="{{ asset('assets/images/Background1.png') }}" class="img-png w-100">
    <img src="{{ asset('assets/images/Background2.png') }}" class="img-jpg w-100">


    <div class="container">
        <div class="topicon2-margin row d-none d-md-flex">
            <div class="col-3 div-social-media">
                <a href="{{ parametre.youtube }}"> <i class="fab topicon fa-youtube"></i></a>
                <a href="{{ parametre.instagram }}"><i class="fab topicon fa-instagram"></i></a>
                <a href="{{ parametre.facebook }}"><i class="fab topicon fa-facebook"></i></a>
            </div>
            <div class="col-9 div-info-contact position-relative">
                <span class="topicon2-span"><i class="fas topicon2 fa-phone-volume"></i>  + {{ parametre.num1 }}</span>
                <span class="topicon2-span"><i class="fas topicon2 fa-envelope"></i> {{ parametre.email }}</span>
                <span class="topicon2-span"><i class="far topicon2 fa-clock"></i> {{ parametre.jourDebut }} - {{ parametre.jourFin }} de {{ parametre.heureDebut }} à {{ parametre.heureFin }}</span>

                    <div class="desktop">
                        <a class="nav-link dropdown-toggle" href="#" id="dropdownMenuButtonlng" data-bs-toggle="dropdown" aria-expanded="false">
                            {% set locale = app.request.locale %}
                            <img class="flag" src="{{ asset('assets/images/'~locale~'.png') }}" alt="{{ locale }}">
                        </a>
                        <ul class="dropdown-menu bg-white flag-div-after" aria-labelledby="dropdownMenuButtonlng">
                            <li><a class="dropdown-item" href="{{ path('change_locale',{'locale': 'fr'}) }}"><img src="{{ asset('assets/images/fr.png') }}" width="30px"> Français </a></li>
                            <li><a class="dropdown-item" href="{{ path('change_locale',{'locale': 'en'}) }}"><img src="{{ asset('assets/images/en.png') }}" width="30px"> Anglais </a></li>
                        </ul>
                    </div>

            </div>
        </div>
        <div class="row d-none d-sm-flex">
            <div class="col-2">
                <a href="{{ path('front_home') }}">
                    <img src="{{ asset('assets/images/logo_2x.png') }}" alt="" height="50" class="logo-front">
                </a>
            </div>
            <div class="col-8">
                <nav id="menu" class="nav-bar navbar navbar-expand-lg">
                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('front_home') }}">{% trans %}ACCUEIL{% endtrans %}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link"
                                   href="{{ path('front_qui_somme_nous') }}">{% trans %}QUI SOMMES-NOUS ?{% endtrans %}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link"
                                   href="{{ path('front_produit_index') }}">{% trans %}NOS PRODUITS{% endtrans %}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link"
                                   href="{{ path('front_parametre_catalogue') }}">{% trans %}CATALOGUE{% endtrans %}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link"
                                   href="{{ path('front_blog_index') }}">{% trans %}ACTUALITES{% endtrans %}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link"
                                   href="{{ path('front_contact_new') }}">{% trans %}NOUS CONTACTER{% endtrans %}</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <div class="col-2">
                <form method="POST" action="{{ path('front_produit_search') }}" id="content">
                    <input type="text" name="search-name" class="input-search" id="search-input">
                    <button type="reset" class="search" id="search-btn"></button>
                </form>
            </div>
        </div>

        <div class="d-xl-none d-md-none d-xxl-none row">
            <div class="col-3 mt-4">
                <nav role="navigation" class="nav_mobile">
                    <div id="menuToggle">
                        <input type="checkbox"/>
                        <span></span>
                        <span></span>
                        <span></span>
                        <ul id="menu_mobile">
                            <li><a href="{{ path('front_home') }}">ACCUEIL</a></li>
                            <li><a href="{{ path('front_qui_somme_nous') }}">QUI SOMMES-NOUS ?</a></li>
                            <li><a href="{{ path('front_produit_index') }}">NOS PRODUITS</a></li>
                            <li><a href="{{ path('front_parametre_catalogue') }}">CATALOGUE</a></li>
                            <li><a href="{{ path('front_blog_index') }}">ACTUALITES</a></li>
                            <li><a href="{{ path('front_contact_new') }}">NOUS CONTACTER</a></li>
                        </ul>
                    </div>
                </nav>
            </div>

            <div class="col-7">
                <a href="{{ path('front_home') }}">
                    <img src="{{ asset('assets/images/logo_2x.png') }}" alt="" height="50" class="logo-front">
                </a>
            </div>

            <div class="col-2">
                <div class="div-search-cadre">
                    <i class="fas fa-search"></i>
                </div>
            </div>
        </div>

    </div>
</header>