{% extends 'front/layout/base.html.twig' %}

{% block body %}

    <div class="row">
        {% if blog.type == "blog" %}
        <img src="{{ asset('images/blogs/'~blog.imageName) }}" height="500px" style="width:100%">
        {% else %}
            <img src="{{ asset('images/blogs/'~blog.imageVideo) }}" height="500px" style="width:100%">
        {% endif %}
    </div>

    <div class="social-media-baniere">
        <a href="{{ parametre.youtube }}"> <i class="fab topicon-fixed fa-youtube"></i></a>
        <a href="{{ parametre.instagram }}"><i class="fab topicon-fixed fa-instagram"></i></a>
        <a href="{{ parametre.facebook }}"><i class="fab topicon-fixed fa-facebook"></i></a>
    </div>

    <div>
        <div class="row mt-5">
            <div class="col-1 p-0 island1">

            </div>
            <div class="col-10 p-0">
                <div class="container">
                    <div class="row justify-center">
                        <div class='container'>
                            <div class='blog-posts'>
                                        <h1>{{ blog.titre }} - ({{ blog.datecreation ? blog.datecreation|date('Y-m-d') : '' }})</h1>
                                            {% if app.request.locale == 'fr' %}
                                                <p>{{ blog.description|raw }}</p>
                                            {% elseif app.request.locale == 'en' %}
                                                <p>{{ blog.descriptionEnglish|raw }}</p>
                                            {% endif %}
                                    {% if blog.type == "video" %}
                                        <center>
                                            <video controls width="100%" height="100%">
                                                <source src="{{asset('images/blogs/'~blog.imageName)}}" type="video/mp4">
                                            </video>
                                        </center>
                                    {% else %}

                                    {% endif %}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-1 p-0 island2">

            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function rand(min, max) {
            return Math.floor(Math.random() * max) + min;
        }

        document.querySelectorAll('.post:not(.featured)').forEach((post) => {
            post.querySelector('.image').style.backgroundImage = `url("https://unsplash.it/300/300/?image=${rand(100, 1000)}")`;
        });
    </script>
{% endblock %}

