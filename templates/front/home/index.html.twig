{% extends 'front/layout/base.html.twig' %}

{% block body %}
    <div class="swiper swiper-index mySwiper2 position-relative">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <img src="{{ asset('images/parametres/homeBanieres/'~parametre.baniere1) }}" height="500px"
                     style="width:100%">
                <img class="img-home" src="{{ asset('assets/images/nawara.png') }}" height="500px"
                     style="width:100%">
            </div>
            <div class="swiper-slide">
                <img src="{{ asset('images/parametres/homeBanieres/'~parametre.baniere2) }}" height="500px"
                     style="width:100%">
                <img class="img-home" src="{{ asset('assets/images/nawara.png') }}" height="500px"
                     style="width:100%">
            </div>
            <div class="swiper-slide">
                <img src="{{ asset('images/parametres/homeBanieres/'~parametre.baniere3) }}" height="500px"
                     style="width:100%">
                <img class="img-home" src="{{ asset('assets/images/nawara.png') }}" height="500px"
                     style="width:100%">
            </div>
        </div>
        <img class="mateb-baniere" src="{{ asset('assets/images/MATEB.png') }}" alt="">
        <img class="materiel-baniere" src="{{ asset('assets/images/MATERIELS ET ÉQUIPEMENT BICHIOU.png') }}" alt="">
        <a class="quisommesnous-baniere-button btn-outline-warning btn"
           href="{{ path('front_qui_somme_nous') }}">Qui Sommes Nous ?</a>
        <div class="swiper-button-next arrow-right1"></div>
        <div class="swiper-button-prev arrow-left1"></div>
        <div class="swiper-pagination pagination-baniere"></div>
    </div>

    <div class="container mt-5 position-relative">
        <img class="settings" src="{{ asset('assets/images/settings.png') }}" alt="">
        <!-- Swiper -->
        <div class="swiper-container mb-5">
            <div class="swiper-wrapper">
                {% for produit in produits %}
                    <div class="mb-5 swiper-slide position-relative">
                        <div class="col-6">
                            <img src="{{ asset('images/produits/'~produit.imageName) }}"
                                 class="img-produit-home-featured">
                        </div>
                        <div class="col-6 mt-5">
                            <div class="row">
                                <h3 class="featured-home-marque"> {{ produit.categorie.nom }} </h3>
                                <h4 class="featured-home-produit"> {{ produit.nom }} </h4>
                                <span class="featured-home-desc"> {{ produit.categorie.nom }} </span>
                            </div>
                            <div class="d-flex justify-content-around">
                                <a class="button-featured-home button-details-product btn-outline-warning btn"
                                   href="{{ path('front_produit_show', {'id': produit.id}) }}">Détails</a>
                                <img class="marque-featured"
                                     src="{{ asset('images/marques/'~produit.marque.imageName) }}" alt="">
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="swiper-button-next arrow-right2"></div>
            <div class="swiper-button-prev arrow-left2"></div>
        </div>
    </div>

    <div class="container position-relative margin-container">
        <div class="center-logo">
            <img class="img-cat" src="{{ asset('assets/images/Logo.png') }}" alt="">
        </div>
        <div class="row item-center">
            {% for categorie in categories %}
                <div class="col-3">
                    <div class="card card-categorie position-relative">
                        <figure class="snip1325">
                            <img src="{{ asset('images/categories/'~categorie.baniereImageName) }}" alt="ls-sample4"/>
                        </figure>
                        <div class="cercle">
                            <img class="cercle-img" src="{{ asset('images/categories/'~categorie.imageName2) }}" alt="">
                        </div>
                        <div class="card-body">
                            <h5 class="cat-dessus-footer"> {{ categorie.nom }}</h5>
                            <span class="cat-dessus-footer-span"> {{ categorie.description }}</span>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div class="navigation">
                {{ knp_pagination_render(categories) }}
            </div>
        </div>
    </div>

    <div class="row swiper margin-swiper">
        <div class="swiper-wrapper swiper-slide-background-color">
            {% for marque in marques %}
                <div class="swiper-slide swiper-slide-background-color">
                    <img class="swiper-slide-on-footer" src="{{ asset('images/marques/'~marque.imageName) }}" alt="">
                </div>
            {% endfor %}
        </div>
        <div class="swiper-button-next swiper-button-prev-footer"></div>
        <div class="swiper-button-prev swiper-button-prev-footer"></div>
    </div>

    <div class="social-media-baniere">
        <a href="{{ parametre.youtube }}"> <i class="fab topicon-fixed fa-youtube"></i></a>
        <a href="{{ parametre.instagram }}"><i class="fab topicon-fixed fa-instagram"></i></a>
        <a href="{{ parametre.facebook }}"><i class="fab topicon-fixed fa-facebook"></i></a>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="{{ asset('assets/css/swiper.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/swiper.min.css') }}">

    <!-- Link Swiper's CSS -->
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css"/>
    <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.0.7/js/swiper.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.0.7/js/swiper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.0.7/js/swiper.esm.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.0.7/js/swiper.esm.bundle.js"></script>
    <script>
        var mySwiper = new Swiper('.swiper-container', {
            // Optional parameters
            direction: 'horizontal',
            loop: true,

            // If we need pagination
            pagination: {
                el: '.swiper-pagination',
            },

            // Navigation arrows
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },

            // And if we need scrollbar
            scrollbar: {
                el: '.swiper-scrollbar',
            },
        })
    </script>

    <!-- Swiper JS -->
    <script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script>
    <!-- Initialize Swiper -->
    <script>
        var swiper = new Swiper('.swiper', {
            slidesPerView: 4,
            direction: getDirection(),
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            on: {
                resize: function () {
                    swiper.changeDirection(getDirection());
                },
            },
        });

        function getDirection() {
            var windowWidth = window.innerWidth;
            var direction = window.innerWidth <= 760 ? 'vertical' : 'horizontal';

            return direction;
        }
    </script>

    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

    <!-- Initialize Swiper -->
    <script>
        var swiper = new Swiper(".mySwiper2", {
            cssMode: true,
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
            pagination: {
                el: ".swiper-pagination",
            },
            mousewheel: true,
            keyboard: true,
        });
    </script>

    <script>
        $(".hover").mouseleave(
            function () {
                $(this).removeClass("hover");
            }
        );
    </script>
{% endblock %}
