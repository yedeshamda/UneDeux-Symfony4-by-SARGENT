{% extends 'front/layout/base.html.twig' %}

{% block body %}
    <div class="swiper swiper-index mySwiper2 position-relative overflow-hidden">
        <div class="swiper-wrapper">
            <div class="swiper-slide bannier_home"
                 style="background-image: url({{ asset('images/parametres/homeBanieres/'~parametre.baniere1) }})">

                <img class="img-home" src="{{ asset('assets/images/nawara.png') }}" height="500px"
                     style="width:100%">
            </div>
            <div class="swiper-slide bannier_home"
                 style="background-image: url({{ asset('images/parametres/homeBanieres/'~parametre.baniere2) }})">

                <img class="img-home" src="{{ asset('assets/images/nawara.png') }}" height="500px"
                     style="width:100%">
            </div>
            <div class="swiper-slide bannier_home"
                 style="background-image: url({{ asset('images/parametres/homeBanieres/'~parametre.baniere3) }})">

                <img class="img-home" src="{{ asset('assets/images/nawara.png') }}" height="500px"
                     style="width:100%">
            </div>
        </div>
        <h1 class="mateb-baniere slide_title">MATEB</h1>
        <span class="materiel-baniere">{% trans %}MATERIELS ET ÉQUIPEMENT BICHIOU{% endtrans %}</span>

        <a class="quisommesnous-baniere-button btn-outline-warning btn"
           href="{{ path('front_qui_somme_nous') }}">{% trans %}Qui Sommes Nous ?{% endtrans %}</a>
        <div class="swiper-button-next arrow-right1"></div>
        <div class="swiper-button-prev arrow-left1"></div>
        <div class="swiper-pagination pagination-baniere"></div>
    </div>

    <div class="container mt-5 position-relative">
        <img class="settings" src="{{ asset('assets/images/settings.png') }}" alt="">
        <!-- Swiper -->
        <div class="swiper-container">
            <div class="swiper-wrapper">
                {% for produit in produits %}
                    <div class="mb-5 swiper-slide position-relative">
                        <div class="col-6">
                            <img src="{{ asset('images/produits/'~produit.imageName) }}"
                                 class="img-produit-home-featured">
                        </div>
                        <div class="col-6 mt-5">
                            <div class="row">
                                <h3 class="featured-home-marque"> {{ produit.categorie.nom }} </h3>
                                <h4 class="featured-home-produit"> {{ produit.nom }} </h4>
                                <span class="featured-home-desc"> {{ produit.categorie.nom }} </span>
                            </div>
                            <div class="d-flex justify-content-around">
                                <a class="button-featured-home button-details-product btn-outline-warning btn"
                                   href="{{ path('front_produit_show', {'id': produit.id}) }}">{% trans %}Détails{% endtrans %}</a>
                                <img class="marque-featured"
                                     src="{{ asset('images/marques/'~produit.marque.imageName) }}" alt="">
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="swiper-button-next swiper-button-prev2 arrow-right2"></div>
            <div class="swiper-button-prev swiper-button-prev2 arrow-left2"></div>
        </div>
    </div>

    <div class="container position-relative margin-container">
        <div class="center-logo">
            <img class="img-cat" src="{{ asset('assets/images/Logo.png') }}" alt="">
        </div>
        <div class="row item-center categorieSwiper margin-swiper overflow-hidden">
            <div class="swiper-wrapper swiper-slide-background-color2">
                {% for categorie in categories %}
                    <div class="swiper-slide swiper-slide-background-color2">
                        <div class="col-3">
                            <a href="{{ path('front_produit_categorie_index', {'id': categorie.id}) }}">
                                <div class="card card-categorie position-relative">
                                    <figure class="snip1325">
                                        <img src="{{ asset('images/categories/'~categorie.baniereImageName) }}"
                                             alt="ls-sample4"/>
                                    </figure>
                                    <div class="cercle">
                                        <img class="cercle-img"
                                             src="{{ asset('images/categories/'~categorie.imageName2) }}" alt="">
                                    </div>
                                    <div class="card-body">
                                        <h5 class="cat-dessus-footer"> {{ categorie.nom }}</h5>
                                        {% if app.request.locale == 'fr' %}
                                            <p class="cat-dessus-footer-span threeline"> {{ categorie.description }}</p>
                                        {% elseif app.request.locale == 'en' %}
                                            <p class="cat-dessus-footer-span threeline"> {{ categorie.descriptionEnglish }}</p>
                                        {% endif %}

                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="swiper-button-next swiper-button-prev2 arrow-right3 "></div>
            <div class="swiper-button-prev swiper-button-prev2 arrow-left3"></div>
        </div>
    </div>

    {% include 'front/layout/marques.html.twig' %}

    <div class="social-media-baniere">
        <a href="{{ parametre.youtube }}"> <i class="fab topicon-fixed fa-youtube"></i></a>
        <a href="{{ parametre.instagram }}"><i class="fab topicon-fixed fa-instagram"></i></a>
        <a href="{{ parametre.facebook }}"><i class="fab topicon-fixed fa-facebook"></i></a>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="{{ asset('assets/css/swiper6-bundle.min.css') }}">

    <!-- Link Swiper's CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Swiper JS -->
    <script src="{{ asset('assets/js/swiper6-bundle.min.js') }}"></script>
    <script>
        $(document).ready(function () {


            var mySwiper = new Swiper('.swiper-container', {
                // Optional parameters
                direction: 'horizontal',
                loop: true,
                observer: true,
                observeParents: true,

                // If we need pagination
                pagination: {
                    el: '.swiper-pagination',
                },

                // Navigation arrows
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },

                // And if we need scrollbar
                scrollbar: {
                    el: '.swiper-scrollbar',
                },
            })


            var marqueSwiper = new Swiper('.marque_swiper', {
                slidesPerView: 4,
                loop: true,
                observer: true,
                observeParents: true,
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                // Responsive breakpoints
                breakpoints: {
                    // when window width is >= 320px
                    320: {
                        slidesPerView: 2,
                    },
                    // when window width is >= 480px
                    480: {
                        slidesPerView: 2,
                    },
                    // when window width is >= 640px
                    640: {
                        slidesPerView: 3,
                    },
                    // when window width is >= 640px
                    940: {
                        slidesPerView: 4,
                    }
                }
            });


            var swiper = new Swiper(".mySwiper2", {
                navigation: {
                    nextEl: ".swiper-button-next",
                    prevEl: ".swiper-button-prev",
                },
                loop: true,
                observer: true,
                observeParents: true,
                slidesPerView: 1,
                pagination: {
                    el: ".swiper-pagination",
                },
            });
            var categorieSwiper = new Swiper('.categorieSwiper', {
                slidesPerView: 3,
                loop: true,
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                // Responsive breakpoints
                breakpoints: {
                    // when window width is >= 320px
                    320: {
                        slidesPerView: 1,
                        spaceBetween: 20
                    },
                    // when window width is >= 480px
                    480: {
                        slidesPerView: 1,
                        spaceBetween: 30
                    },
                    // when window width is >= 640px
                    640: {
                        slidesPerView: 3,
                        spaceBetween: 40
                    }
                }
            });


            $(".hover").mouseleave(
                function () {
                    $(this).removeClass("hover");
                }
            );

        });
    </script>

{% endblock %}
