{% extends 'front/layout/base.html.twig' %}

{% block body %}
    <h1>Actualite</h1>

    <table class="table">
        <tbody>

           
            <tr>
                <th>Titre_article</th>
                <td>{{ actualite.titreArticle }}</td>
            </tr>
            <tr>
                <th>Type_sport</th>
                <td>{{ actualite.typeSport }}</td>
            </tr>
            <tr>
                <th>Contu_article</th>
                <td>{{ actualite.contuArticle }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="img-fluid w-100" src="{{ asset('images/actualite/'~actualite.image) }}"
                                 alt=""></td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ actualite.video }}</td>
            </tr>
            <tr>
                <th>Commentaire<th>
                <th><form method="post" action="traitement.php">
                        <p><input type="text" name="pseudo" /></p>
                    </form></th>

                <td>{{ actualite.Commentaire }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_actualite_index') }}">back to list</a>

    <a href="{{ path('app_actualite_edit', {'id': actualite.id}) }}">edit</a>

    {{ include('actualite/_delete_form.html.twig') }}
{% endblock %}
